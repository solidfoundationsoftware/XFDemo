<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XFDemoApp"
             xmlns:models="clr-namespace:XFDemoApp.Models"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="XFDemoApp.Views.Templates.ListingItemTemplate"
             xmlns:platform="clr-namespace:XFDemoApp.Platform;assembly=XFDemoApp.Platform"
             x:Name="Self"
             Padding="2">
    <!--<ContentView.GestureRecognizers>
        <TapGestureRecognizer NumberOfTapsRequired="1"
                              Tapped="TapGestureRecognizer_Tapped"
                              Command="{Binding Source={x:Reference Self}, Path=ItemTappedCommand}"
                              CommandParameter="{Binding .}">
        </TapGestureRecognizer>
    </ContentView.GestureRecognizers>-->
    <ContentView.Content>
        <Grid InputTransparent="True"
              CascadeInputTransparent="True"
              BackgroundColor="{StaticResource MainWrapperBackgroundColor}">
            <!--<Frame.Effects>
                <platform:DropShadowColorEffect Color="{StaticResource AccentColor}" />
            </Frame.Effects>-->
            <Grid RowSpacing="1"
                  ColumnSpacing="1"
                  x:DataType="models:Listing">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="130" />
                </Grid.RowDefinitions>

                <!--FIRST ROW => TITLE & PRICE -->
                <Grid ColumnSpacing="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--TITLE-->
                    <Label Padding="7,10"
                           BackgroundColor="{StaticResource LightBackgroundColor}"
                           FontSize="15"
                           HorizontalOptions="Fill"
                           HorizontalTextAlignment="Start"
                           LineBreakMode="TailTruncation"
                           Text="{Binding ListingTitle}"
                           Style="{StaticResource LabelBoldStyle}"
                           TextColor="{StaticResource BrandColor}"
                           VerticalTextAlignment="Start" />

                    <StackLayout Grid.Column="1"
                                 Spacing="0"
                                 Padding="7,5"
                                 BackgroundColor="{StaticResource LightBackgroundColor}">
                        <Label FontSize="{StaticResource SmallFontSize}"
                               Style="{StaticResource LabelBoldStyle}"
                               TextColor="{DynamicResource AccentColor}"
                               HorizontalTextAlignment="Center"
                               HorizontalOptions="Center"
                               Text="{Binding ListingPrice, StringFormat='{0:C0}'}" />

                        <Label FontSize="{StaticResource MicroFontSize}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               Text="PRICE" />
                    </StackLayout>
                </Grid>

                <!--SECOND ROW => IMAGE AND DESCRIPTION -->
                <Grid Grid.Row="1"
                      RowSpacing="1"
                      ColumnSpacing="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--IMAGE-->
                    <Grid Padding="5,5"
                          WidthRequest="120"
                          HeightRequest="120"
                          BackgroundColor="{StaticResource LightBackgroundColor}">
                        <ffimageloading:CachedImage Aspect="AspectFill"
                                                    FadeAnimationEnabled="true"
                                                    Source="{Binding ListingImageUrl}" />
                    </Grid>

                    <!--MESSAGE-->
                    <Label Grid.Column="1"
                           Padding="7,10"
                           BackgroundColor="{DynamicResource LightBackgroundColor}"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill"
                           LineBreakMode="WordWrap"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           FontSize="{StaticResource MediumFontSize}"
                           Text="{Binding OfferToLikersMessage}">
                    </Label>
                </Grid>
            </Grid>
        </Grid>
    </ContentView.Content>
</ContentView>